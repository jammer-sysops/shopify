{% capture form %}
  
    <form id="add-item-form" action="/cart/add" data-productid="{{ product.id }}" data-productid="{{product.id}}"  method="post" class="variants" style="padding-bottom:30px;">
<!-- Begin ReCharge code -->
{% if product.available %}{% include 'subscription-product' %}{% endif %}
<!-- End ReCharge code -->
 
 {% if product.available %}{% endif %}   

      <h2 class="price {{product.id}}" id="price-preview" style="display:none;">{{ product.price_min | money }}{% if product.price_min < product.compare_at_price_min %} <del>{{ product.compare_at_price_min | money }}</del>{% endif %}</h2>

        <!-- Begin product options -->
        <div class="pure-u-1-1 page-product-options" id="product-options" style="margin-top:0px;">
            <div class="pure-u-sm-1-1 pure-u-md-4-5 pure-u-lg-4-5 pure-u-xl-4-5 page-product-options-wrapper">
                <div class="pure-u-1-1 page-product__variation">

{%  assign found_one_in_stock = false %}
{% if product.variants.size > 1 %}
                <ul id="product-options" name="id" data-productid="{{ product.id }}"> 
{%          for variant in product.variants %}
{%                  assign found_one_in_stock = true %}
                
                <li class="page-product-options-item">
                    <label>{{ variant.title }} - <span class="Bold-theme-hook-DO-NOT-DELETE bold_product_price_2" data-override-value-set="1" data-override-value="{{ variant.price }}" style="display:none !important;"></span>{{ variant.price | money }} &nbsp; <del>{{ variant.compare_at_price | money }}</del></label>

                {% if variant.available %}
                    <input type="radio" data-productid="{{product.id}}" name="id" data-productid="{{ product.id }}" value="{{ variant.id }}" {% if variant == product.first_available_variant %} checked {% endif %}>
                {% else %}
                    <span style="margin:0;color:#D0011B;">Sold Out</span>
                {% endif %}
                </li>


{%          endfor %}
                </ul>
{%              else %}
                <select id="product-select" name="id" data-productid="{{ product.id }}" data-productid="{{product.id}}" style="display:none !important;">
                    {%          for variant in product.variants %}
                    <option value="{{ variant.id }}" selected="selected"></option>
                    {%          endfor %}
                </select>
                <p class="page-product-options-item">{{ product.title }}  {{ product.price | money }}</p>

               
{% endif %}
                </div>
            </div>


{%          if settings.display_quantity_dropdown %}
            <div class="pure-u-sm-1-1 pure-u-md-1-5 pure-u-lg-1-5 pure-u-xl-1-5 page-product-qtn__group hide-on-mobile" style="display:none;">
                <p class="">Quantity</p>
                <input id="quantity" type="number" name="quantity" value="1" class="pure-u-1-3 page-product__qtn" />
            </div>
{%          endif %}         

        </div>
        
            <div>
{%          unless product.available %}
